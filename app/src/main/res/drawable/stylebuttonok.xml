<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#7CFC00" />
            <stroke
                android:width="2dp"
                android:color="#00FF00" />
            <corners
                android:radius="3dp" />
            <padding

                android:top="10dp"

                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#7CFC00"
                android:endColor="#00FF00"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#00FF00" />
            <corners
                android:radius="4dp" />
            <padding

                android:top="10dp"
                android:bottom="10dp"
       />
        </shape>
    </item>
</selector>